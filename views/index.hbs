<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="msg" class="form-control" placeholder="Mensaje" autofocus>
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+01456237895" autocomplete="off">
            </div>
            <button class="btn btn-primary btn-block">
                Enviar
            </button>
        </form>
    </div>

    <div class="col-md-8">
        {{#if messages}}
            <ul class="list-group" style="height: 70vh; overflow-y: auto;">
                {{#each messages}}
                    <div class="list-group-item list-group-item-info list-group-item-action">
                        <p>{{msg}}</p>
                        {{!--<span>{{hideNumber to}}</span>
                        <span>{{hideNumber from}}</span>--}}

                        <span>Para:{{to}}</span>
                        <span>De:{{from}}</span>
                    </div>
                {{/each}}
            </ul>
        {{else}}
            <p>Sin mensajes</p>
        {{/if}}
    </div>
</div>